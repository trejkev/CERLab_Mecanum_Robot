<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="cerlab_mecanum">
    
    <!-- Robot geometry parameters -->
    <xacro:property name="PI" value="3.1415926535897931" />

    <!-- Robot body ( base link ) parameters -->
    <xacro:property name="base_link_length" value="0.461"/>
    <xacro:property name="base_link_width"  value="0.580"/>
    <xacro:property name="base_link_height" value="0.152"/>

    <!-- Wheel parameters -->
    <xacro:property name="wheel_radius" value="${0.203/2}"/>
    <xacro:property name="wheel_width"  value="0.078"     />
    <xacro:property name="shaft_length" value="0.1"       />
    <xacro:property name="shaft_radius" value="0.005"     />

    <!-- LiDAR sensor parameters -->
    <xacro:property name="s1_x_axis_front_location" value="0"  />
    <xacro:property name="s1_y_axis_front_location" value="20" />
    <xacro:property name="s2_x_axis_front_location" value="0"  />
    <xacro:property name="s2_y_axis_front_location" value="-20"/>


    <!-- Joint limits parameters -->

    <!-- Main wheel limits -->
    <xacro:property name="main_wheel_max_rev"      value="3.14" />
    <xacro:property name="main_wheel_min_rev"      value="-3.14"/>
    <xacro:property name="main_wheel_max_velocity" value="3.14" />
    <xacro:property name="main_wheel_max_effort"   value="300"  />

    <!-- Rollers limits-->
    <xacro:property name="rollers_max_rev"      value="3.14" />
    <xacro:property name="rollers_min_rev"      value="-3.14"/>
    <xacro:property name="rollers_max_velocity" value="3.14" />
    <xacro:property name="rollers_max_effort"   value="300"  />


    <xacro:include filename="$(find cerlab_mecanum)/urdf/robot.gazebo"/>
    

    <link name="base_footprint"></link>




    <!-- Main body -->

    <joint name="base_link_joint" type="fixed">
        <origin xyz="0 0 ${wheel_radius + base_link_height/2}" rpy="0 0 0" />
        <parent link="base_footprint"/>
        <child link="base_link" />
    </joint>

    <link name="base_link">
        <visual>
            <origin rpy=" 0 0 0" xyz="0 0 0"/>
            <geometry>
                <!-- <box size="${base_link_length} ${base_link_width} ${base_link_height}"/> -->
                <mesh filename="package://cerlab_mecanum/meshes/escarabajo_armado.stl" scale="0.001 0.001 0.001"/>
            </geometry>
            <material name="dark_grey"/>
        </visual>
        <collision>
            <origin rpy=" 0 0 0" xyz="0 0 0"/>
            <geometry>
                <mesh filename="package://cerlab_mecanum/meshes/escarabajo_armado.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="8.0"/>
            <inertia
                ixx="0.1" ixy="0" ixz="0"
                iyy="0.1" iyz="0"
                izz="0.1"
            />
        </inertial>
    </link>




    <!-- Wheel PP -->

    <!-- The shaft is just for visual effect -->

    <joint name="joint_wheel_xpyp_shaft" type="fixed">
        <parent link="base_link"/>
        <child link="wheel_xpyp_shaft"/>]
        <origin xyz="${base_link_length/2} ${base_link_width/2-0.065} ${-base_link_height/2}" rpy="0 ${PI/2} 0"/>
    </joint>

    <link name="wheel_xpyp_shaft">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="${shaft_radius}" length="${shaft_length}"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin xyz="0 0 0 " rpy="0 0 0"/>
            <geometry>
                <cylinder radius="${shaft_radius}" length="${shaft_length}"/>
            </geometry>
        </collision>
    </link>

    <joint name="wheel_xpyp_joint" type="continuous">
        <origin xyz="${base_link_length/2 + 0.05} ${base_link_width/2-0.065} ${-base_link_height/2}" rpy="0 ${PI/2} 0"/>
        <parent link="base_link"/>
        <child link="wheel_xpyp"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="wheel_xpyp">
        <visual>
            <origin xyz="0 0 ${wheel_width/2}" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://cerlab_mecanum/meshes/mecanum_wheel.stl" scale="0.001 0.001 0.001"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin xyz="0 0 ${wheel_width/2}" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="${wheel_radius}" length="${wheel_width}"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 ${wheel_width/2}"/>
            <mass value="1"/>
            <!-- Inertia based on cylinder -->
            <inertia ixx="100" ixy="0.0" ixz="0.0"
                     iyy="100" iyz="0.0"
                     izz="100"/>
        </inertial>
    </link>




    <!-- Wheel NP -->

    <joint name="joint_wheel_xnyp_shaft" type="fixed">
        <parent link="base_link"/>
        <child link="wheel_xnyp_shaft"/>
        <origin xyz="${-base_link_length/2} ${base_link_width/2-0.065} ${-base_link_height/2}" rpy="0 ${-PI/2} 0"/>
    </joint>

    <link name="wheel_xnyp_shaft">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="${shaft_radius}" length="${shaft_length}"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin xyz="0 0 0 " rpy="0 0 0"/>
            <geometry>
                <cylinder radius="${shaft_radius}" length="${shaft_length}"/>
            </geometry>
        </collision>
    </link>

    <joint name="wheel_xnyp_joint" type="continuous">
        <origin xyz="${-base_link_length/2 - 0.05} ${base_link_width/2-0.065} ${-base_link_height/2}" rpy="0 ${-PI/2} 0"/>
        <parent link="base_link"/>
        <child link="wheel_xnyp" />
        <axis xyz="0 0 1"/>
    </joint>

    <link name="wheel_xnyp">
        <visual>
            <origin xyz="0 0 ${wheel_width/2}" rpy="0 0 0" />
            <geometry>
                <mesh filename="package://cerlab_mecanum/meshes/mecanum_wheel.stl" scale="0.001 0.001 0.001"/>
            </geometry>
            <material name="black" />
        </visual>
        <collision>
            <origin xyz="0 0 ${wheel_width/2}" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="${wheel_radius}" length="${wheel_width}"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 ${wheel_width/2}" rpy="0 0 0"/>
            <mass value="1.6"/>
            <!-- Inertia based on cylinder -->
            <inertia
                ixx="0.000324824" ixy="0" ixz="0"
                iyy="0.000480000" iyz="0"
                izz="0.000324824"
            />
        </inertial>
    </link>




    <!-- Wheel PN -->

    <joint name="joint_wheel_xpyn_shaft" type="fixed">
        <parent link="base_link"/>
        <child link="wheel_xpyn_shaft"/>
        <origin xyz="${base_link_length/2} ${-base_link_width/2+0.095} ${-base_link_height/2}" rpy="0 ${PI/2} 0"/>
    </joint>

    <link name="wheel_xpyn_shaft">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="${shaft_radius}" length="${shaft_length}"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin xyz="0 0 0 " rpy="0 0 0"/>
            <geometry>
                <cylinder radius="${shaft_radius}" length="${shaft_length}"/>
            </geometry>
        </collision>
    </link>

    <joint name="wheel_xpyn_joint" type="continuous">
        <origin xyz="${base_link_length/2 + 0.05} ${-base_link_width/2+0.095} ${-base_link_height/2}" rpy="0 ${PI/2} 0"/>
        <parent link="base_link"/>
        <child link="wheel_xpyn" />
        <axis xyz="0 0 1"/>
    </joint>

    <link name="wheel_xpyn">
        <visual>
            <origin xyz="0 0 ${wheel_width/2}" rpy="0 0 0" />
            <geometry>
                <mesh filename="package://cerlab_mecanum/meshes/mecanum_wheel.stl" scale="0.001 0.001 0.001"/>
            </geometry>
            <material name="black" />
        </visual>
        <collision>
            <origin xyz="0 0 ${wheel_width/2}" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="${wheel_radius}" length="${wheel_width}"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 ${wheel_width/2}" rpy="0 0 0"/>
            <mass value="1.6"/>
            <!-- Inertia based on cylinder -->
            <inertia
                ixx="0.000324824" ixy="0" ixz="0"
                iyy="0.000480000" iyz="0"
                izz="0.000324824"
            />
        </inertial>
    </link>




    <!-- Wheel NN -->

    <joint name="joint_wheel_xnyn_shaft" type="fixed">
        <parent link="base_link"/>
        <child link="wheel_xnyn_shaft"/>
        <origin xyz="${-base_link_length/2} ${-base_link_width/2+0.095} ${-base_link_height/2}" rpy="0 ${-PI/2} 0"/>
    </joint>

    <link name="wheel_xnyn_shaft">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="${shaft_radius}" length="${shaft_length}"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin xyz="0 0 0 " rpy="0 0 0"/>
            <geometry>
                <cylinder radius="${shaft_radius}" length="${shaft_length}"/>
            </geometry>
        </collision>
    </link>

    <joint name="wheel_xnyn_joint" type="fixed">
        <origin xyz="${-base_link_length/2 - 0.05} ${-base_link_width/2+0.095} ${-base_link_height/2}" rpy="0 ${-PI/2} 0"/>
        <parent link="base_link"/>
        <child link="wheel_xnyn" />
        <axis xyz="0 0 1"/>
    </joint>

    <link name="wheel_xnyn">
        <visual>
            <origin xyz="0 0 ${wheel_width/2}" rpy="0 0 0" />
            <geometry>
                <mesh filename="package://cerlab_mecanum/meshes/mecanum_wheel.stl" scale="0.001 0.001 0.001"/>
            </geometry>
            <material name="black" />
        </visual>
        <collision>
            <origin xyz="0 0 ${wheel_width/2}" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="${wheel_radius}" length="${wheel_width}"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 ${wheel_width/2}" rpy="0 0 0"/>
            <mass value="1.6"/>
            <!-- Inertia based on cylinder -->
            <inertia
                ixx="0.000324824" ixy="0" ixz="0"
                iyy="0.000480000" iyz="0"
                izz="0.000324824"
            />
        </inertial>
    </link>




    <!-- LiDAR sensors -->

    <joint name="front_scan_joint" type="fixed">
        <parent link="base_link"/>
        <child link="base_scan_front"/>
        <!-- <origin xyz="0.09 ${base_link_width/2-0.004} ${base_link_height/2+0.1}" rpy="0 0 0"/> era 0.04 en z y 0 en x -->
        <origin xyz="0 ${base_link_width/2-0.046} ${base_link_height/2+0.05}" rpy="0 0 0"/>
    </joint>

    <link name="base_scan_front">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://cerlab_mecanum/meshes/hokuyo.stl" scale="1 1 1"/>
            </geometry>
            <material name="black"/>
        </visual>

        <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
            <cylinder length="0.0315" radius="0.055"/>
        </geometry>
        </collision>

        <inertial>
        <mass value="0.114" />
        <origin xyz="0 0 0" />
        <inertia ixx="0.001" ixy="0.0" ixz="0.0"
                iyy="0.001" iyz="0.0"
                izz="0.001" />
        </inertial>
    </link>

    <joint name="back_scan_joint" type="fixed">
        <parent link="base_link"/>
        <child link="base_scan_back"/>
        <!-- <origin xyz="0.09 ${-base_link_width/2+0.115} ${base_link_height/2+0.1}" rpy="0 0 0"/> -->
        <origin xyz="0 ${-base_link_width/2+0.1} ${base_link_height/2+0.05}" rpy="0 0 0"/>
    </joint>

    <link name="base_scan_back">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://cerlab_mecanum/meshes/hokuyo.stl" scale="1 1 1"/>
            </geometry>
            <material name="black"/>
        </visual>

        <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
            <cylinder length="0.0315" radius="0.055"/>
        </geometry>
        </collision>

        <inertial>
        <mass value="0.114" />
        <origin xyz="0 0 0" />
        <inertia ixx="0.001" ixy="0.0" ixz="0.0"
                iyy="0.001" iyz="0.0"
                izz="0.001" />
        </inertial>
    </link>

</robot>